{
  "name": "billbook-be",
  "version": "1.0.0",
  "description": "Billbook Backend API - Node.js server with PostgreSQL, AWS S3, and JWT authentication",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:migrate": "node migrate.js migrate",
    "db:info": "node migrate.js info",
    "db:clean": "node migrate.js clean",
    "db:seed": "echo 'Run your database seeds here'"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "aws-s3",
    "jwt",
    "api",
    "backend",
    "billbook"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0",
    "pg": "^8.16.3",
    "twilio": "^5.8.0"
  },
  "devDependencies": {
    "aws-sdk-mock": "^6.2.1",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "s3rver": "^3.7.1",
    "supertest": "^7.1.4"
  }
}
